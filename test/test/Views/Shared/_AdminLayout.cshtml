<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
</head>
<body>
    <!-- Top navigation -->
    <header class="bg-white shadow-sm fixed-top">
        <div class="container-fluid">
            <div class="d-flex align-items-center py-2">
                <button class="btn btn-link text-dark d-lg-none me-3" onclick="toggleSidebar()">
                    <i class="bi bi-list fs-4"></i>
                </button>

                <!-- Right side icons -->
                <div class="d-flex align-items-center ms-auto">
                    <a href="#" class="btn btn-light mx-2"><i class="bi bi-grid"></i></a>
                    <a href="#" class="btn btn-light mx-2"><i class="bi bi-bell"></i></a>
                    <!-- <div class="dropdown">
                        <button class="btn btn-light dropdown-toggle d-flex align-items-center" type="button" data-bs-toggle="dropdown">
                            <img src="~/path-to-avatar" class="rounded-circle me-2" width="32" height="32" />
                            <span>@User.Identity?.Name</span>
                        </button>
                    </div> -->
                </div>
            </div>
        </div>
    </header>

    <div class="d-flex" style="margin-top: 56px; min-height: calc(100vh - 56px);">
        <!-- Sidebar -->
        <nav class="sidebar bg-white border-end position-relative" id="sidebar">
            <div class="sidebar-toggle-arrow" onclick="toggleSidebar()">
                <i class="bi bi-chevron-left"></i>
            </div>
            <div class="p-3">
                <div class="sidebar-menu">
                    <h6 class="text-uppercase text-muted mb-3">MENU</h6>
                    
                    <!-- Dashboards Dropdown -->
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#dashboardSubmenu" data-bs-toggle="collapse" role="button">
                            <i class="bi bi-bell me-2"></i>
                            Dashboards
                        </a>
                        <div class="collapse" id="dashboardSubmenu">
                            <div class="ps-3">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Dashboard</a>
                            </div>
                        </div>
                    </div>

                    <!-- Users -->
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#pagesSubmenu" data-bs-toggle="collapse" role="button">
                            <i class="bi bi-person me-2"></i>
                            Users
                        </a>
                        <div class="collapse" id="pagesSubmenu">
                            <div class="ps-3">
                                <a class="nav-link" asp-controller="Users" asp-action="Index">User List</a>
                            </div>
                            <!-- <div class="ps-3">
                                <a class="nav-link" asp-controller="UserRoles" asp-action="Index">User Role List</a>
                            </div>
                            <div class="ps-3">
                                <a class="nav-link" asp-controller="UserModule" asp-action="Index">User Module List</a>
                            </div> -->
                        </div>
                    </div>


                    <!-- Roles -->
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#rolesSubmenu" data-bs-toggle="collapse" role="button">
                            <i class="bi bi-person-badge me-2"></i>
                            Roles
                        </a>
                         <div class="collapse" id="rolesSubmenu">
                            <div class="ps-3">
                                <a class="nav-link" asp-controller="Roles" asp-action="Index">Role List</a>
                            </div>
                           
                            <!-- <div class="ps-3">
                                <a class="nav-link" asp-controller="RoleModule" asp-action="Index">Role Module List</a>
                            </div> -->
                        </div>
                    </div>


                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#modulesSubmenu" data-bs-toggle="collapse" role="button">
                            <i class="bi bi-grid me-2"></i>
                            Modules
                        </a>
                        <div class="collapse" id="modulesSubmenu">
                            <div class="ps-3">
                                <a class="nav-link" asp-controller="Modules" asp-action="Index">Module List</a>
                            </div>
                        </div>
                    </div>

                    <h6 class="text-uppercase text-muted mt-4 mb-3">UI COMPONENTS</h6>
                    
                    <!-- Elements -->
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#elementsSubmenu" data-bs-toggle="collapse" role="button">
                            <i class="bi bi-diamond me-2"></i>
                            Elements
                        </a>
                        <div class="collapse" id="elementsSubmenu">
                            <div class="ps-3">
                                <!-- Add elements links here -->
                            </div>
                        </div>
                    </div>

                    <!-- Components -->
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#componentsSubmenu" data-bs-toggle="collapse" role="button">
                            <i class="bi bi-puzzle me-2"></i>
                            Components
                        </a>
                        <div class="collapse" id="componentsSubmenu">
                            <div class="ps-3">
                                <!-- Add components links here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main content -->
        <div class="flex-grow-1 bg-light">
            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 