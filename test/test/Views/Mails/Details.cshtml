                        <p id="email"></p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">CC:</label>
                        <div id="emailCc"></div>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">BCC:</label>
                        <div id="emailBcc"></div>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">@test.Project.API.Resources.Mail.Details.Resource.Organizer:</label>
                        <p id="organizer"></p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">@test.Project.API.Resources.Mail.Details.Resource.OrganizerEmail:</label>
                        <p id="organizerMail"></p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="fw-bold">@test.Project.API.Resources.Mail.Details.Resource.CreateBy:</label>
                        <p id="createBy"></p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">@test.Project.API.Resources.Mail.Details.Resource.CreateTime:</label>
                        <p id="createTime"></p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@test.Project.API.Resources.Mail.Details.Resource.SendStatus:</label>
                        <p id="sendStatus"></p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@test.Project.API.Resources.Mail.Details.Resource.SendTime:</label>
                        <p id="sendTime"></p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@test.Project.API.Resources.Mail.Details.Resource.Location:</label>
                        <p id="location"></p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@test.Project.API.Resources.Mail.Details.Resource.MailType:</label>
                        <p id="mailType"></p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@test.Project.API.Resources.Mail.Details.Resource.EventPeriod:</label>
                        <p id="eventPeriod"></p>
                    </div>
                    <div class="mb-3">

                        <label class="fw-bold">@test.Project.API.Resources.Mail.Details.Resource.Attachments:</label>
                        <div id="fileAttach"></div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="mb-3">
                        <label class="fw-bold">@test.Project.API.Resources.Mail.Details.Resource.EmailContent:</label>
                        <div id="emailContent" class="border rounded p-3 bg-light"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Define resources for JavaScript
        window.mailResources = {
            delete: '@test.Project.API.Resources.Mail.Details.Resource.Delete',
            back: '@test.Project.API.Resources.Mail.Details.Resource.Back',
            edit: '@test.Project.API.Resources.Mail.Details.Resource.Edit',    
        };
    </script>
    <script>
        $(document).ready(function() {
            loadMailDetails();
        });

        async function loadMailDetails() {
            try {
                const token = localStorage.getItem('token');
                if (!token) {
                    window.location.href = '/Account/Login';
                    return;
                }

                const mailId = window.location.pathname.split('/').pop();

                const response = await axios.get(`http://localhost:5001/api/Mails/${mailId}`, {
                    headers: { Authorization: `Bearer ${token}` }
                });

                if (response.data.success) {
                    const mail = response.data.data;
                    displayMailDetails(mail);
                }
            } catch (error) {
                console.error('Error loading mail details:', error);
                if (error.response?.status === 403) {
                    window.location.href = '/Account/AccessDenied';
                }else if (error.response?.status === 401) {
                    window.location.href = '/Account/Login';
                }
            }
        }

        function displayMailDetails(mail) {
            $('.card').attr('data-mail-id', mail.id);
            
            $('#mailId').text(mail.id);
            $('#subject').text(mail.subject || '');
            $('#email').text(mail.email || '');
            $('#emailCc').html(formatEmailList(mail.emailCc));
            $('#emailBcc').html(formatEmailList(mail.emailBcc));
            $('#createBy').text(mail.createBy || '');
            $('#createTime').text(formatDateTime(mail.createTime));
            $('#sendStatus').html(formatSendStatus(mail.isSend, mail.sentStatus));
            $('#sendTime').text(formatDateTime(mail.sendTime));
            $('#fileAttach').html(formatAttachments(mail.fileAttach));
            $('#emailContent').html(mail.emailContent || '');
            
            $('#location').text(mail.location || '');
            $('#mailType').text(mail.mailType);
            $('#organizer').text(mail.organizer || '');
            $('#organizerMail').text(mail.organizerMail || '');
            $('#eventPeriod').html(formatEventPeriod(mail.fromDate, mail.toDate));
        }

        function formatEmailList(emails) {
            if (!emails) return '';
            return emails.split(';')
                .map(email => `<span class="badge bg-secondary me-1">${email.trim()}</span>`)
                .join('');
        }

        function formatDateTime(dateString) {
            if (!dateString) return '';
            return new Date(dateString).toLocaleString();
        }

        function formatSendStatus(isSend, status) {
            const sendBadge = isSend 
                ? '<span class="badge bg-success me-2">Sent</span>'
                : '<span class="badge bg-warning me-2">Not Sent</span>';
            return `${sendBadge}${status || ''}`;
        }

        function formatAttachments(attachments) {
            if (!attachments) return 'No attachments';
            return attachments.split(';')
                .map(file => `
                    <div class="mb-1">
                        <i class="fas fa-paperclip me-1"></i>
                        <a href="/api/Mails/download/${file}" class="text-decoration-none">${file}</a>
                    </div>
                `)
                .join('');
        }

        function formatEventPeriod(fromDate, toDate) {
            if (!fromDate || !toDate) return '';
            return `From: ${formatDateTime(fromDate)}<br>To: ${formatDateTime(toDate)}`;
        }

        function editMail() {
            const mailId = $('#mailId').text();
            window.location.href = `/Mails/Edit/${mailId}`;
        }

        function deleteMail() {
