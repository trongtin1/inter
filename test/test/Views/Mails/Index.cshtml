@{
    ViewData["Title"] = "Mails";
}

<div class="container-fluid px-4">
    <!-- Filters -->
    <div class="card shadow mb-4">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h6 class="mb-0">
                <i class="fas fa-filter me-2"></i>@test.Project.API.Resources.Mail.Index.Resource.SearchFilters
            </h6>
            <button class="btn btn-sm btn-secondary" onclick="filterHandler.resetFilters()">
                <i class="fas fa-undo me-1"></i>@test.Project.API.Resources.Mail.Index.Resource.Reset
            </button>
        </div>
        <div class="card-body">
            <div class="row g-3">

                <div class="col-md-3">
                    <label class="form-label">ID</label>
                    <select class="form-control select2-dropdown" id="id">
                        <option value="">All</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Email</label>
                    <select class="form-control select2-dropdown" id="email">
                        <option value="">All</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">CC</label>
                    <select class="form-control select2-dropdown" id="emailCc" multiple>
                        <option value="">All</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">BCC</label>
                    <select class="form-control select2-dropdown" id="emailBcc" multiple>
                        <option value="">All</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">@test.Project.API.Resources.Mail.Index.Resource.IsSend</label>
                    <select class="form-control" id="isSend">
                        <option value="">All</option>
                        <option value="true">Sent</option>
                        <option value="false">Not Sent</option>

                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">@test.Project.API.Resources.Mail.Index.Resource.SendStatus</label>
                    <input type="text" class="form-control" id="sendStatus" placeholder="Search status...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">@test.Project.API.Resources.Mail.Index.Resource.TimeType</label>
                    <select class="form-control" id="timeType">
                        <option value="">All</option>
                        <option value="createTime">Create Time</option>
                        <option value="sendTime">Send Time</option>

                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">@test.Project.API.Resources.Mail.Index.Resource.TimeRange</label>
                    <div class="date-range-group">
                        <input type="datetime-local" id="fromDate" class="form-control">
                        <span>@test.Project.API.Resources.Mail.Index.Resource.to</span>
                        <input type="datetime-local" id="toDate" class="form-control">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-table me-2"></i>@test.Project.API.Resources.Mail.Index.Resource.MailList
            </h5>
            <div class="d-flex gap-2">
                <!-- Buttons will be rendered here by permission-handler -->
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th><input type="checkbox" id="selectAll" class="form-check-input" /></th>
                            <th>ID</th>
                            <th>Email</th>
                            <th>@test.Project.API.Resources.Mail.Index.Resource.EmailContent</th>
                            <th>@test.Project.API.Resources.Mail.Index.Resource.FileAttach</th>
                            <th>@test.Project.API.Resources.Mail.Index.Resource.CreateBy</th>
                            <th>@test.Project.API.Resources.Mail.Index.Resource.CreateTime</th>
                            <th>@test.Project.API.Resources.Mail.Index.Resource.IsSend</th>
                            <th>@test.Project.API.Resources.Mail.Index.Resource.SendTime</th>
                            <th>@test.Project.API.Resources.Mail.Index.Resource.Subject</th>
                            <th>@test.Project.API.Resources.Mail.Index.Resource.SendStatus</th>
                            <th>Email CC</th>
                            <th>Email BCC</th>
                        </tr>
                    </thead>
                    <tbody id="mailsTableBody">
                        <!-- Data will be populated here -->
                    </tbody>
                </table>
                <nav>
                    <ul class="pagination justify-content-center" id="pagination">
                        <!-- Pagination will be populated here -->
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Define resources for JavaScript
        window.mailResources = {
            delete: '@test.Project.API.Resources.Mail.Index.Resource.Delete',
            export: '@test.Project.API.Resources.Mail.Index.Resource.Export',
            import: '@test.Project.API.Resources.Mail.Index.Resource.Import',
            newMail: '@test.Project.API.Resources.Mail.Index.Resource.NewMail'
        };
    </script>
    <script src="~/js/mails/Index/api-service.js"></script>
    <script src="~/js/mails/Index/filter-handler.js"></script>
    <script src="~/js/mails/Index/render-handler.js"></script>
    <script src="~/js/mails/Index/format-handler.js"></script>
    <script src="~/js/mails/Index/export-import.js"></script>
    <script src="~/js/mails/Index/permission-handler.js"></script>
    <script src="~/js/mails/Index/index.js"></script>
}  
@section Styles {
    <link href="~/css/select2-custom.css" rel="stylesheet" />
}